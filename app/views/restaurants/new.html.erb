<h1>Create a new restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
  <%= f.submit %>
<% end %>
<div class = mt-3>
  <%= link_to "Back to restaurants", restaurants_path, :class => "btn btn-outline-secondary" %>
</div>
