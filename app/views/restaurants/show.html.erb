<h2 class ="text-center fst-italic text-success opacity-50 fw-bold"><%= @restaurant.name %></h2>
<p> Address : <b><%= @restaurant.address %></b></p>
<p> Phone-number : <b><%= @restaurant.phone_number %></b></p>
<p> Category : <b><%= @restaurant.category %></b></p>

<p> Review(s) : </p>
<% @restaurant.reviews.each do |review| %>
  <div class = "mb-4 bg-light col-2 m-2 text-center p-3">
  <p> <%= review.rating %>/5 </p>
  <%= review.content %> <br>
  </div>
<% end %>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>

  <%= f.button :submit, :class => "btn btn-outline-primary mt-3 mb-3" %>
<% end %>

<p> <%= link_to "Back to restaurants", restaurants_path, :class => "btn btn-outline-secondary"%> </p>
